<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FontAwesome.Icons.Avalonia.Demo"
             xmlns:avalonia="clr-namespace:FontAwesome.Icons.Avalonia;assembly=FontAwesome.Icons.Avalonia"
             xmlns:controls="clr-namespace:FontAwesome.Icons.Avalonia.Demo.Controls"
             x:Class="FontAwesome.Icons.Avalonia.Demo.App"
             RequestedThemeVariant="Dark">
  <Application.DataTemplates>
    <local:ViewLocator />
  </Application.DataTemplates>

  <Application.Styles>
    <SimpleTheme />
    <avalonia:FontAwesomeIconStyles />
    <Style Selector="controls|SelectionWrapper">
      <Setter Property="Template">
        <ControlTemplate>
          <ContentPresenter Name="PART_ContentPresenter"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            ContentTemplate="{TemplateBinding ContentTemplate}"
                            Content="{TemplateBinding Content}"
                            Padding="{TemplateBinding Padding}"
                            VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                            HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}" />
        </ControlTemplate>
      </Setter>
    </Style>
  </Application.Styles>
</Application>
